<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".GpsPointsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_darker_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_point_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj punkt"
            android:backgroundTint="@color/color_lighter_background_for_text"
            android:textColor="@color/color_white_text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/points_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/color_darker_background">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>